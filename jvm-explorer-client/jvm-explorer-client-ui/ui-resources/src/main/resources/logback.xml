<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>

	<appender name="UiBackgroundAppender" class="com.blogspot.mikelaud.je.ui.background.UiBackgroundAppender"/>

	<root level="TRACE">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="UiBackgroundAppender" />
	</root>

</configuration>
